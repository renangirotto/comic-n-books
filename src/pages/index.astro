---
// import ActionBullet from '@components/ActionBullet.astro'
import Layout from '@layouts/Page.astro'
---

<Layout>
  <!-- <Header isHome={true} /> -->
  <section class="home">
    <h1 aria-label="Comic and Books" class="home__title">
      <span aria-hidden="true" class="home__title">Comic</span>
      <span aria-hidden="true" class="home__title--small">and</span>
      <span aria-hidden="true" class="home__title">Books</span>
    </h1>
  </section>
</Layout>

<style lang="scss">
  .home {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: $cb-size-md;
    width: 100vw;
    height: 100vh;
    padding: $cb-size-md;
    position: relative;

    &__title {
      display: flex;
      flex-direction: column;
      font-size: calc($cb-size-lg * 3);
      line-height: 1;
      text-align: center;
      color: $cb-color-primary-pure;

      @include for-desktop-up {
        flex-direction: row;
        align-items: center;
        font-size: calc($cb-size-lg * 4);
      }

      &--small {
        font-size: calc($cb-size-lg * 2);
        color: $cb-color-secondary-dark;

        @include for-desktop-up {
          font-size: calc($cb-size-md * 3);
          transform: rotate(-90deg);
          margin: 0 -1.5rem;
        }
      }
    }
  }
</style>
